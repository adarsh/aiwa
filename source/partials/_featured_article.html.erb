<% featured = blog.articles.select{|item| item.metadata[:page]["featured"] rescue false} %>

<% featured.each do |article| %>
  <div class="post-wrap featured-post-wrap">
    <h5 class="post-title">
      <%= link_to article.title, article %>
    </h5>

    <div class="post-body">
      <%= article.body %>
    </div>
  </div>
<% end %>
